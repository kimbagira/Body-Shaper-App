    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:text="How To Determine your BodyType."
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:fontFamily="@font/armata" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:text="Everyone’s body is different. There are actually 3 body types:"
        android:textColor="@color/colorPrimaryText"
        android:textSize="17sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="16dp"
        android:text="endomorph"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="19dp"
        android:textStyle="italic"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:text="Here are some to indicate that you’re an Endomorph:*Your shoulders are wider than your hips,*Your body looks round and soft,don’t put on excess fat"
    android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_marginTop="16dp"
        android:text="mesomorph"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_marginTop="20dp"
        android:text="Here are some to indicate that you’re an mesomorph:*your shoulders are roughly the same width as your hips*Your forearms are moderately thick**Your body looks rugged and squarish in shape"
        android:textColor="@color/colorPrimaryText"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_marginTop="18dp"
        android:text="ectomorph"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Here are the common characteristics of Ectomorphs:*Your shoulders are narrower than your hips,*Your forearms are on the smallish side *Your body tends to stay skinny by default"
        android:textColor="@color/colorPrimaryText"
        android:textSize="17sp"
        android:textStyle="italic" />
</RelativeLayout>